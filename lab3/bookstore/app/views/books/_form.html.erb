<%= form_with model: book do |form| %>

    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% book.errors.full_messages_for(:name).each do |message| %>
            <div> <%= message %> </div>
        <% end %>    
     </div>
    
    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
        <% book.errors.full_messages_for(:description).each do |message| %>
            <div> <%= message %> </div>
        <% end %>  
    </div>
    <div>
    <%= form.label :price %> <br>
    <%= form.text_field :price %>
    <% book.errors.full_messages_for(:price).each do |message| %>
            <div> <%= message %> </div>
        <% end %>
    </div>
    <div>
    <%= form.label :image %> <br>
    <%= form.text_field :image %>
    <% book.errors.full_messages_for(:image).each do |message| %>
            <div> <%= message %> </div>
        <% end %>
    </div>
    <div>
     <%= form.submit %>
    </div>
    
    <% end %>    