<h1 class="alert alert-dark">Books</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.name%></td>
        <td><%= link_to "View", book %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Delete", book_path(book.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New book", new_book_path %>